<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghb.mydemo">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".observer.UserInfoActivity" />
        <activity android:name=".observer.UserInfoActivity2" />
        <activity android:name=".parallax.ParallaxActivity" />
        <activity android:name=".gallery.GalleryActivity" />
        <activity android:name=".SearchViewActivity" />
        <activity android:name=".QRCodeActivity" />
        <activity android:name=".LocateActivity" />
        <activity android:name=".TabActivity"></activity>
    </application>

</manifest>